{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "prompt-improver-local",
  "title": "Prompt Improver",
  "description": "Transform rough prompts into polished, structured prompts using DSPy few-shot learning with Anthropic Haiku",
  "icon": "icon.png",
  "author": "thomas",
  "categories": [
    "Productivity",
    "Developer Tools"
  ],
  "license": "MIT",
  "localhost": true,
  "commands": [
    {
      "name": "promptify-quick",
      "title": "Improve Prompt",
      "description": "Transform rough ideas into structured, effective prompts using DSPy + Anthropic Haiku",
      "mode": "view",
      "preferences": [
        {
          "name": "ollamaBaseUrl",
          "description": "Local Ollama server",
          "type": "text",
          "required": false,
          "default": "http://localhost:11434",
          "title": "Ollama URL"
        },
        {
          "name": "dspyBaseUrl",
          "description": "DSPy backend with few-shot learning",
          "type": "text",
          "required": false,
          "default": "http://localhost:8000",
          "title": "DSPy URL"
        },
        {
          "name": "executionMode",
          "description": "Prompt improvement pipeline",
          "type": "dropdown",
          "required": false,
          "default": "legacy",
          "data": [
            {
              "title": "DSPy Legacy (Few-shot)",
              "value": "legacy"
            },
            {
              "title": "NLaC Pipeline (OPRO + IFEval)",
              "value": "nlac"
            },
            {
              "title": "Ollama Local (No backend)",
              "value": "ollama"
            }
          ],
          "title": "Execution Mode"
        },
        {
          "name": "model",
          "description": "Primary model for improvement",
          "type": "text",
          "required": false,
          "default": "hf.co/mradermacher/Novaeus-Promptist-7B-Instruct-i1-GGUF:Q5_K_M",
          "title": "Model"
        },
        {
          "name": "fallbackModel",
          "description": "Backup model if primary fails",
          "type": "text",
          "required": false,
          "default": "devstral:24b",
          "title": "Fallback Model"
        },
        {
          "name": "preset",
          "description": "Improvement approach",
          "type": "dropdown",
          "required": false,
          "default": "structured",
          "data": [
            {
              "title": "Structured",
              "value": "structured"
            },
            {
              "title": "Default",
              "value": "default"
            },
            {
              "title": "Specific",
              "value": "specific"
            },
            {
              "title": "Coding",
              "value": "coding"
            }
          ],
          "title": "Style"
        },
        {
          "name": "timeoutMs",
          "description": "Request timeout (milliseconds)",
          "type": "text",
          "required": false,
          "default": "120000",
          "title": "Timeout"
        },
        {
          "name": "wizardMode",
          "description": "Interactive clarification before generating prompt",
          "type": "dropdown",
          "required": false,
          "default": "auto",
          "data": [
            {
              "title": "Auto (LLM decides)",
              "value": "auto"
            },
            {
              "title": "Always On",
              "value": "always"
            },
            {
              "title": "Always Off",
              "value": "off"
            }
          ],
          "title": "Wizard Mode"
        },
        {
          "name": "maxWizardTurns",
          "description": "Maximum clarification rounds in wizard mode",
          "type": "dropdown",
          "required": false,
          "default": "2",
          "data": [
            {
              "title": "1 turn",
              "value": "1"
            },
            {
              "title": "2 turns",
              "value": "2"
            },
            {
              "title": "3 turns",
              "value": "3"
            }
          ],
          "title": "Max Wizard Turns"
        }
      ]
    },
    {
      "name": "promptify-selected",
      "title": "Promptify Selected",
      "description": "Improve selected text (or clipboard) into a structured prompt using DSPy backend",
      "mode": "view"
    },
    {
      "name": "prompt-history",
      "title": "Prompt History",
      "description": "View and copy previously generated prompts",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "latest",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "18.18.4",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.3",
    "sharp": "^0.34.5",
    "tsx": "^4.21.0",
    "typescript": "^5.2.2",
    "vitest": "^1.6.0"
  },
  "scripts": {
    "setup": "./setup.sh",
    "predev": "./scripts/check-localhost-permission.sh",
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish",
    "eval": "tsx scripts/eval/evaluator.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config=vitest.config.e2e.ts"
  }
}
